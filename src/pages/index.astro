<Layout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <aside data-pagefind-ignore>
      <div class="space-y-10">
        <section>
          <h3 class="font-semibold text-black dark:text-white">
            Hello!
